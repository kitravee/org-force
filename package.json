  "license": "MIT",
  "scripts": {
    "start:friction": "nx serve friction",
    "start:reaction": "nx serve reaction",
    "start:dev": "env-cmd -f .env concurrently --kill-others \"yarn gen:gql\" \"yarn start:reaction\" \"yarn start:friction\"",
    "build": "nx build",
    "print-affected": "nx print-affected --target=build --select=projects",
    "test-affected": "nx affected:test",
    "lint-affected:fix": "nx affected:lint --fix --all",
    "graph": "nx graph",
    "db:studio": "npx env-cmd -f .local.env npx prisma studio",
    "db:generate-types": "npx prisma generate",
    "gen:gql": "graphql-codegen --config tools/gql-codegen/gql-codegen.ts --watch",
    "prettier:fix": "npx prettier . --write",

    "type:check": "tsc --noEmit -p apps/friction/tsconfig.json",
    "verify": "nx workspace-lint && nx format:write && nx format:check && nx affected --target=lint --fix --parallel=3 && npx nx affected --target=test --parallel=3 && nx affected --target=build --parallel=3",
    "validate:reaction-env": "npx env-cmd -f .local.env ts-node --project tools/tsconfig.json tools/environment/validate-reaction-env.ts",
    "validate:friction-env": "npx env-cmd -f .local.env ts-node --project tools/tsconfig.tools.json tools/environment/validate-friction-env.ts"
  },
